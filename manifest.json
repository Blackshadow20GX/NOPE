{
  "manifest_version": 2,

  "name": "NOPE",
  "description": "Removes Ads from Facebook sidebar and chat.",
  "version": "1.0",

  "browser_action": {
    "default_title": "NOPE - No Ads for You!",
    "default_icon": "src/assets/nope.png"
  },
  "background": {
      "scripts": ["src/lib/content.js"],
      "persistent": false
  },
  "content_scripts": [{
      "matches": ["*://*.facebook.com/*"],
      "js": ["src/lib/nope.js"]
  }],
  "permissions": [
      "activeTab",
      "https://ajax.googleapis.com/"
  ]
}
